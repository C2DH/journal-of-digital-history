{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://journaldigitalhistory.eu/schemas/abstract.json",
  "type": "object",
  "title": "Schema to validate abstract submissions",
  "description": "Abstracts are stored as JSON",
  "default": {},
  "definitions": {
    "id": {
      "$id": "#/definitions/id",
      "type": ["string","number"],
      "title": "An usual ID string",
      "default": "",
      "examples": ["ieoryY78", 1],
      "minLength": 1,
      "maxLength": 250
    },
    "title": {
      "$id": "#/definitions/title",
      "type": "string",
      "title": "An usual article title",
      "description": "The article title",
      "default": "",
      "examples": ["Once Upon a Time in Belval"],
      "minLength": 10,
      "maxLength": 250
    },
    "abstract": {
      "$id": "#/definitions/abstract",
      "type": "string",
      "title": "The article abstract",
      "description": "The article abstract",
      "default": "",
      "examples": [
        "article abstract"
      ],
      "minLength": 100,
      "maxLength": 10000
    },
    "text250": {
      "$id": "#/definitions/text250",
      "type": "string",
      "title": "A short text",
      "description": "A short text, max 250 characters",
      "default": "",
      "examples": ["Once Upon a Time in Belval, theere was a little house on a little hill"],
      "maxLength": 250
    },
    "text500": {
      "$id": "#/definitions/text500",
      "type": "string",
      "title": "A medium text",
      "description": "A medium text, max 500 characters",
      "default": "",
      "examples": ["Once Upon a Time in Belval, theere was a little house on a little hill"],
      "maxLength": 500
    },
    "token": {
      "$id": "#/definitions/token",
      "type": "string",
      "title": "A recaptcha token",
      "description": "Max 1000 characters",
      "default": "",
      "examples": ["03AGdBq25p8daIHp8-V7dvO3MEOshLJphGtGIEfymURe1Sq2VSgmL87MYi..."],
      "maxLength": 1000
    },
    "datetime": {
      "$id": "#/definitions/datetime",
      "type": "string",
      "format": "date-time",
      "title": "datetime"
    },
    "firstname": {
      "$id": "#/definitions/firstname",
      "type": "string",
      "title": "A first name",
      "description": "Person first name, up to 50 letters",
      "default": "",
      "examples": [
        "Joe"
      ],
      "maxLength": 100
    },
    "lastname": {
      "$id": "#/definitions/lastname",
      "type": "string",
      "title": "A last name",
      "description": "Person last name, up to 50 letters",
      "default": "",
      "examples": [
        "De Filippo"
      ],
      "maxLength": 100
    },
    "email": {
      "$id": "#/definitions/email",
      "type": "string",
      "pattern": "^[a-z0-9\\._%+!$&*=^|~#%{}\/\\-]+@([a-z0-9\\-]+\\.){1,}([a-z]{2,22})$",
      "title": "An Email",
      "description": "Personal email for authors, users etc...",
      "default": "",
      "examples": ["joe.defilippo@uni.lu"]
    },
    "githubId": {
      "$id": "#/definitions/githubId",
      "type": "string",
      "pattern": "^[a-z0-9\\._%+!$&*=^|~#%{}\/\\-]+@([a-z0-9\\-]+\\.){1,}([a-z]{2,22})$",
      "title": "A github user account",
      "description": "Personal or institutional github user",
      "default": "",
      "maxLength": 50,
      "examples": ["@joe.defilippo"]
    },
    "affiliation": {
      "$id": "#/definitions/affiliation",
      "type": "string",
      "title": "a name of an Institution",
      "description": "Author current affiliation",
      "default": "",
      "examples": [
        "University of Minnesota, LUxembourg"
      ],
      "maxLength": 250
    },
    "url": {
      "$id": "#/definitions/url",
      "type": "string",
      "title": "The dataset url schema",
      "description": "An explanation about the purpose of this instance.",
      "default": "",
      "examples": [
        "dataset url"
      ],
      "minLength": 7,
      "maxLength": 500,
      "pattern": "^(https?|http?)://"
    },
    "orcid": {
      "$id": "#/definitions/orcid",
      "type": "string",
      "title": "The orcid schema",
      "description": "The ORCID ID is a 16-digit number that is compatible with the ISO Standard (ISO 27729). ORCID IDs will be randomly assigned by the ORCID Registry and will be expressed as a URI.",
      "default": "",
      "examples": [
        "https://orcid.org/0000-0002-0237-2532"
      ],
      "pattern": "^https?://orcid.org/[0-9]{4}-[0-9]{4}-[0-9]{4}-[0-9X]{4}$"
    },
    "isValid": {
      "$id": "#/definitions/isValid",
      "type": "boolean"
    },
    "acceptConditions": {
      "$id": "#/definitions/acceptConditions",
      "type": "boolean",
      "enum": [ true ]
    }
  },
  "examples": [{
    "title": "article title",
    "abstract": "article abstract",
    "contact": {
      "firstname": "John",
      "lastname": "Foo",
      "affiliation": "University of Minnesota"
    },
    "authors": [{
      "firstname": "John",
      "lastname": "Foo",
      "email": "john.fooooooo@uni.lu",
      "affiliation": "University of Minnesota"
    }]
  }],
  "required": [
    "title",
    "abstract",
    "contact",
    "authors",
    "datasets",
    "acceptConditions",
    "githubId"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$ref": "#/definitions/id"
    },
    "title": {
      "$ref": "#/definitions/title"
    },
    "abstract": {
      "$ref": "#/definitions/abstract"
    },
    "githubId": {
      "$ref": "#/definitions/githubId"
    },
    "datasets": {
      "$id": "#/properties/datasets",
      "type": "array",
      "title": "a list of datasets",
      "default": [],
      "minItems": 0,
      "maxItems": 10,
      "additionalItems": true,
      "items": {
        "$id": "#/properties/datasets/items",
        "type": "object",
        "title": "A dataset description, with links",
        "description": "An explanation about the purpose of this instance.",
        "default": {},
        "examples": [{
          "url": "https://google.com",
          "description": "Open source search engine used"
        }],
        "required": [
          "url",
          "description"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "$ref": "#/definitions/id"
          },
          "url": {
            "$ref": "#/definitions/url"
          },
          "description": {
            "$ref": "#/definitions/text500"
          },
          "type": {
            "$ref": "#/definitions/text250"
          },
          "license": {
            "$ref": "#/definitions/text250"
          },
          "isValid": {
            "$ref": "#/definitions/isValid"
          }
        }
      }
    },
    "contact": {
      "$id": "#/properties/contact",
      "type": "object",
      "title": "Basic contact info",
      "required": [
        "firstname",
        "lastname",
        "email",
        "orcid"
      ],
      "additionalProperties": false,
      "properties": {
        "firstname": {
          "$ref": "#/definitions/firstname"
        },
        "lastname": {
          "$ref": "#/definitions/lastname"
        },
        "email": {
          "$ref": "#/definitions/email"
        },
        "affiliation": {
          "$ref": "#/definitions/affiliation"
        },
        "orcid": {
          "$ref": "#/definitions/orcid"
        },
        "id": {
          "$ref": "#/definitions/id"
        },
        "isValid": {
          "$ref": "#/definitions/isValid"
        }
      }
    },
    "authors": {
      "$id": "#/properties/authors",
      "type": "array",
      "title": "A list of authors",
      "description": "An explanation about the purpose of this instance.",
      "default": [],
      "minItems": 1,
      "maxItems": 10,
      "examples": [
        [{
          "firstname": "John",
          "lastname": "Foo",
          "email": "john.fooooooooo@uni.lu",
          "affiliation": "University of Minnesota, Luxembourg"
        }]
      ],
      "additionalItems": true,
      "items": {
        "$id": "#/properties/authors/items",
        "type": "object",
        "title": "An author of a paper",
        "description": "An explanation about the purpose of this instance.",
        "default": {},
        "examples": [{
          "firstname": "John",
          "lastname": "Foo",
          "affiliation": "University of Minnesota"
        }],
        "required": [
          "firstname",
          "lastname",
          "affiliation"
        ],
        "additionalProperties": false,
        "properties": {
          "firstname": {
            "$ref": "#/definitions/firstname"
          },
          "lastname": {
            "$ref": "#/definitions/lastname"
          },
          "email": {
            "anyOf": [
              {
                "$ref": "#/definitions/email"
              },
              {
                "type": "string",
                "maxLength": 0
              }
            ]
          },
          "affiliation": {
            "$ref": "#/definitions/affiliation"
          },
          "orcid": {
            "anyOf": [
              {
                "$ref": "#/definitions/orcid"
              },
              {
                "type": "string",
                "maxLength": 0
              }
            ]
          },
          "id": {
            "$ref": "#/definitions/id"
          },
          "isValid": {
            "$ref": "#/definitions/isValid"
          }
        }
      }
    },
    "acceptConditions": {
      "$ref": "#/definitions/acceptConditions"
    }
  }
}
